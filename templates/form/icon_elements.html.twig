{% extends 'bootstrap_4_layout.html.twig' %}

{%- block button_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn-default'))|trim}) %}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
                '%name%': name,
                '%id%': id,
            }) %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>
        {%- if left_icon is defined %}<span class="{{ left_icon }}"></span>{% endif %}
            {{ label|trans({}, translation_domain) }}
        {% if right_icon is defined %}<span class="{{ right_icon }}"></span>{% endif %}
    </button>
{%- endblock button_widget -%}