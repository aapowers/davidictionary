{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center mr-auto">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Term</th>
                <th scope="col">Definition</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in dictionaryList %}
                <tr>
                    <td>{{ entry.getTerm }}</td>
                    <td>{{ entry.getDefinition }}</td>
                    <td>
                        <ul>
                            <li class="action-item">
                                <a class="action-link" href="{{ path('view', { 'id': entry.getId }) }}"><span class="fas fa-binoculars mr-1"></span>view</a>
                            </li>
                            <li class="action-item">
                                <a class="action-link" href="{{ path('edit', { 'id': entry.getId }) }}"><span class="fas fa-edit mr-1"></span>edit</a>
                            </li>
                            <li class="action-item">
                                <a class="action-link" href="{{ path('delete', { 'id': entry.getId }) }}"><span class="fas fa-trash mr-1"></span>delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}